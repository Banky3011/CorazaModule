# Makefile for python interface for package corazamodule.
# File is generated by gopy. Do not edit.
# gopy build -output=./corazamodule -name=corazamodule ./gomodule

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/usr/bin/python
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/usr/include/python3.10
LDFLAGS = -L/usr/lib/x86_64-linux-gnu -lpython3.10 -lcrypt -ldl  -lm -lm

all: gen build

gen:
	gopy gen -no-make -name=corazamodule ./gomodule

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm corazamodule.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w corazamodule.go
	# generate corazamodule_go$(LIBEXT) from corazamodule.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o corazamodule_go$(LIBEXT) corazamodule.go
	# use pybindgen to build the corazamodule.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _corazamodule$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated corazamodule.py python wrapper imports this c-code package
	
	$(GCC) corazamodule.c  corazamodule_go$(LIBEXT) -o _corazamodule$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


